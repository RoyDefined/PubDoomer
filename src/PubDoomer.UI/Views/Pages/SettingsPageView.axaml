<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PubDoomer.Views.Pages.SettingsPageView"
             x:DataType="SettingsPageViewModel">
    <Design.DataContext>
        <SettingsPageViewModel />
    </Design.DataContext>

    <Border Padding="10">
        <ScrollViewer>
            <StackPanel>

                <Grid ColumnDefinitions="Auto, *">
                    <!-- Title -->
                    <TextBlock Grid.ColumnSpan="2"
                               Classes="H3"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Theme="{StaticResource TitleTextBlock}"
                               Text="Settings" />

                    <!-- Save button -->
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button HorizontalAlignment="Left"
                                Classes="Success"
                                Theme="{DynamicResource SolidButton}"
                                Command="{Binding SaveSettingsCommand}"
                                Padding="5 0">
                            <PathIcon Theme="{StaticResource InnerPathIcon}"
                                      Classes="ExtraLarge"
                                      Data="{StaticResource SemiIconSave}" />
                        </Button>
                        <TextBlock VerticalAlignment="Center"
                                   Theme="{StaticResource TitleTextBlock}"
                                   Classes="Tertiary"
                                   FontSize="10"
                                   TextWrapping="Wrap"
                                   Text="Save the current state of the settings." />
                    </StackPanel>
                </Grid>

                <!-- TODO: Add a max width for the labels so they do not keep taking space when the text is already no longer wrapped -->
                
                <!-- Content -->
                <Border Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="250"/>
                            <ColumnDefinition Width="2"/>
                            <ColumnDefinition Width="*" MinWidth="250"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left side -->
                        <StackPanel Spacing="5">

                            <!-- Visualization -->
                            <HeaderedContentControl Classes="GroupBox"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Header="Visualization">

                                <Border Padding="5 10">

                                    <!-- Dark mode button -->
                                    <Grid ColumnDefinitions="135, *">

                                        <TextBlock VerticalAlignment="Center"
                                                   FontWeight="Bold"
                                                   Text="Dark mode"
                                                   TextWrapping="Wrap" />

                                        <Button Grid.Column="1"
                                                Classes="Tertiary"
                                                Theme="{DynamicResource OutlineButton}"
                                                HorizontalAlignment="Left"
                                                Command="{Binding ToggleThemeCommand}">

                                            <!-- Different icon when dark -->
                                            <Grid>
                                                <PathIcon IsVisible="{Binding DarkModeEnabled}"
                                                          Theme="{StaticResource InnerPathIcon}"
                                                          Data="{StaticResource SemiIconSun}" />

                                                <PathIcon IsVisible="{Binding !DarkModeEnabled}"
                                                          Theme="{StaticResource InnerPathIcon}"
                                                          Data="{StaticResource SemiIconMoon}" />
                                            </Grid>
                                        </Button>
                                    </Grid>
                                </Border>
                            </HeaderedContentControl>

                            <!-- Behaviour -->
                            <HeaderedContentControl Classes="GroupBox"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Header="Behaviour">

                                <Border Padding="5 10">

                                    <!-- Startup behaviour -->
                                    <Grid ColumnDefinitions="135, *">


                                        <TextBlock VerticalAlignment="Center"
                                                   FontWeight="Bold"
                                                   Text="Startup behaviour"
                                                   TextWrapping="Wrap" />

                                        <ComboBox Grid.Column="1" SelectedIndex="0" HorizontalAlignment="Stretch">
                                            <ComboBoxItem>Do not open a project</ComboBoxItem>
                                            <ComboBoxItem>Open the last selected project</ComboBoxItem>
                                            <ComboBoxItem>Open a specific project</ComboBoxItem>
                                        </ComboBox>
                                    </Grid>
                                </Border>
                            </HeaderedContentControl>
                        </StackPanel>

                        <GridSplitter Grid.Column="1" ShowsPreview="True" />

                        <!-- Right side -->
                        <StackPanel Grid.Column="2" Spacing="5">

                            <!-- Compilers -->
                            <HeaderedContentControl Classes="GroupBox"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Header="Compilers">

                                <StackPanel>
                                    <TextBlock Classes="Tertiary"
                                               FontSize="10"
                                               Margin="0 -5 0 0"
                                               Text="Compilers configured on project level will take priority."
                                               TextWrapping="Wrap" />

                                    <Border Padding="5 10">

                                        <StackPanel Spacing="10">

                                            <!-- ACC compiler -->
                                            <Grid ColumnDefinitions="115, *">

                                                <TextBlock VerticalAlignment="Center"
                                                           FontWeight="Bold"
                                                           Text="ACC compiler"
                                                           TextWrapping="Wrap" />

                                                <StatefulTextbox Grid.Column="1"
                                                                 Text="{Binding Settings.AccCompilerExecutableFilePath}">
                                                    <StatefulTextbox.AdditionalContent>
                                                        <Button Grid.Column="2"
                                                                Command="{Binding PickFileCommand}"
                                                                CommandParameter="AccCompiler"
                                                                Classes="Tertiary"
                                                                Theme="{DynamicResource SolidButton}"
                                                                Padding="5 0">
                                                            <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                                      Classes="ExtraLarge"
                                                                      Data="{StaticResource SemiIconFolderOpen}" />
                                                        </Button>
                                                    </StatefulTextbox.AdditionalContent>
                                                </StatefulTextbox>
                                            </Grid>

                                            <!-- BCC compiler -->
                                            <Grid ColumnDefinitions="115, *">

                                                <TextBlock VerticalAlignment="Center"
                                                           FontWeight="Bold"
                                                           Text="BCC compiler"
                                                           TextWrapping="Wrap" />

                                                <StatefulTextbox Grid.Column="1"
                                                                 Text="{Binding Settings.BccCompilerExecutableFilePath}">
                                                    <StatefulTextbox.AdditionalContent>
                                                        <Button Grid.Column="2"
                                                                Command="{Binding PickFileCommand}"
                                                                CommandParameter="BccCompiler"
                                                                Classes="Tertiary"
                                                                Theme="{DynamicResource SolidButton}"
                                                                Padding="5 0">
                                                            <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                                      Classes="ExtraLarge"
                                                                      Data="{StaticResource SemiIconFolderOpen}" />
                                                        </Button>
                                                    </StatefulTextbox.AdditionalContent>
                                                </StatefulTextbox>
                                            </Grid>

                                            <!-- GDCC compiler -->
                                            <Grid ColumnDefinitions="115, *">

                                                <TextBlock VerticalAlignment="Center"
                                                           FontWeight="Bold"
                                                           Text="GDCC compiler"
                                                           TextWrapping="Wrap" />

                                                <StatefulTextbox Grid.Column="1"
                                                                 Text="{Binding Settings.GdccCompilerExecutableFilePath}">
                                                    <StatefulTextbox.AdditionalContent>
                                                        <Button Grid.Column="2"
                                                                Command="{Binding PickFileCommand}"
                                                                CommandParameter="GdccCompiler"
                                                                Classes="Tertiary"
                                                                Theme="{DynamicResource SolidButton}"
                                                                Padding="5 0">
                                                            <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                                      Classes="ExtraLarge"
                                                                      Data="{StaticResource SemiIconFolderOpen}" />
                                                        </Button>
                                                    </StatefulTextbox.AdditionalContent>
                                                </StatefulTextbox>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </HeaderedContentControl>

                            <!-- Editors -->
                            <HeaderedContentControl Classes="GroupBox"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Header="Editors">

                                <StackPanel>
                                    <TextBlock Classes="Tertiary"
                                               FontSize="10"
                                               Margin="0 -5 0 0"
                                               Text="Editors configured on project level will take priority."
                                               TextWrapping="Wrap" />

                                    <Border Padding="5 10">

                                        <StackPanel Spacing="10">

                                            <!-- Ultimate Doombuilder executable -->
                                            <Grid ColumnDefinitions="115, *">

                                                <TextBlock VerticalAlignment="Center"
                                                           FontWeight="Bold"
                                                           Text="Ultimate DoomBuilder"
                                                           TextWrapping="Wrap" />


                                                <StatefulTextbox Grid.Column="1"
                                                                 Text="{Binding Settings.UdbExecutableFilePath}">
                                                    <StatefulTextbox.AdditionalContent>
                                                        <Button Grid.Column="2"
                                                                Command="{Binding PickFileCommand}"
                                                                CommandParameter="Udb"
                                                                Classes="Tertiary"
                                                                Theme="{DynamicResource SolidButton}"
                                                                Padding="5 0">
                                                            <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                                      Classes="ExtraLarge"
                                                                      Data="{StaticResource SemiIconFolderOpen}" />
                                                        </Button>
                                                    </StatefulTextbox.AdditionalContent>
                                                </StatefulTextbox>
                                            </Grid>

                                            <!-- Slade executable -->
                                            <Grid ColumnDefinitions="115, *">

                                                <TextBlock VerticalAlignment="Center"
                                                           FontWeight="Bold"
                                                           Text="Slade"
                                                           TextWrapping="Wrap" />

                                                <StatefulTextbox Grid.Column="1"
                                                                 Text="{Binding Settings.SladeExecutableFilePath}">
                                                    <StatefulTextbox.AdditionalContent>
                                                        <Button Grid.Column="2"
                                                                Command="{Binding PickFileCommand}"
                                                                CommandParameter="Slade"
                                                                Classes="Tertiary"
                                                                Theme="{DynamicResource SolidButton}"
                                                                Padding="5 0">
                                                            <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                                      Classes="ExtraLarge"
                                                                      Data="{StaticResource SemiIconFolderOpen}" />
                                                        </Button>
                                                    </StatefulTextbox.AdditionalContent>
                                                </StatefulTextbox>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </HeaderedContentControl>
                            
                            <!-- Other executables -->
                            <HeaderedContentControl Classes="GroupBox"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Header="Other executables">

                                <StackPanel>
                                    <TextBlock Classes="Tertiary"
                                               FontSize="10"
                                               Margin="0 -5 0 0"
                                               Text="Executables configured on project level will take priority."
                                               TextWrapping="Wrap" />

                                    <Border Padding="5 10">

                                        <StackPanel Spacing="10">

                                            <!-- ACS VM -->
                                            <Grid ColumnDefinitions="115, *">

                                                <TextBlock VerticalAlignment="Center"
                                                           FontWeight="Bold"
                                                           Text="ACS VM"
                                                           TextWrapping="Wrap" />


                                                <StatefulTextbox Grid.Column="1"
                                                                 Text="{Binding Settings.AcsVmExecutableFilePath}">
                                                    <StatefulTextbox.AdditionalContent>
                                                        <Button Grid.Column="2"
                                                                Command="{Binding PickFileCommand}"
                                                                CommandParameter="AcsVm"
                                                                Classes="Tertiary"
                                                                Theme="{DynamicResource SolidButton}"
                                                                Padding="5 0">
                                                            <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                                      Classes="ExtraLarge"
                                                                      Data="{StaticResource SemiIconFolderOpen}" />
                                                        </Button>
                                                    </StatefulTextbox.AdditionalContent>
                                                </StatefulTextbox>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </HeaderedContentControl>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>