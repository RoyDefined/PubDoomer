<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:engine="clr-namespace:PubDoomer.Project.Engine"
             xmlns:compilestatics="clr-namespace:PubDoomer.Tasks.Compile.Utils;assembly=PubDoomer.Tasks.Compile"
             xmlns:acsvmstatics="clr-namespace:PubDoomer.Tasks.AcsVM.Utils;assembly=PubDoomer.Tasks.AcsVM"
             xmlns:savingstatics="clr-namespace:PubDoomer.Utils"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PubDoomer.Views.Pages.ProjectPageView"
             x:DataType="ProjectPageViewModel">

    <Design.DataContext>
        <ProjectPageViewModel />
    </Design.DataContext>

    <UserControl.Resources>
        <engine:EngineTypeToImagePathConverter x:Key="EngineTypeToImagePathConverter" />
    </UserControl.Resources>

    <Border Padding="10">
        <ScrollViewer>
            <StackPanel>
                <Grid ColumnDefinitions="Auto, *">
                    <!-- Title -->
                    <TextBlock Grid.ColumnSpan="2"
                               Classes="H3"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Theme="{StaticResource TitleTextBlock}"
                               Text="Project" />

                    <!-- Save button (not applicable here unlike in the settings, therefore -->
                    <TextBlock VerticalAlignment="Center"
                               Theme="{StaticResource TitleTextBlock}"
                               Classes="Tertiary"
                               FontSize="10"
                               TextWrapping="Wrap">
                        Project settings are saved when you save the project as a whole.
                        <LineBreak />
                        Setting on this tab override similar configured settings in the settings tab.
                    </TextBlock>
                </Grid>
                
                <!-- Content -->
                <Border Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="250"/>
                            <ColumnDefinition Width="2"/>
                            <ColumnDefinition Width="*" MinWidth="250"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left side -->
                        <StackPanel Spacing="5">

                            <!-- Project properties -->
                            <HeaderedContentControl Classes="GroupBox"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Header="Properties">

                                <Border Padding="5 10">

                                    <!-- Project Name Input -->
                                    <StatefulTextbox Text="{Binding CurrentProjectProvider.ProjectContext.Name, Mode=TwoWay}" />
                                </Border>
                            </HeaderedContentControl>
                            
                            <!-- Game engines -->
                            <HeaderedContentControl Classes="GroupBox"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Header="Game engines">

                                <StackPanel>
                                    <Button HorizontalAlignment="Left"
                                            Command="{Binding AddEngineCommand}"
                                            Classes="Success"
                                            Theme="{DynamicResource BorderlessButton}"
                                            Padding="5 0">
                                        <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                  Classes="ExtraLarge"
                                                  Data="{StaticResource SemiIconPlusCircle}" />
                                    </Button>
                                    
                                    <Border Padding="5 10" MaxHeight="400">
                                    
                                        <ScrollViewer>
                                            <ItemsControl ItemsSource="{Binding CurrentProjectProvider.ProjectContext.Engines}">
                                                <ItemsControl.ItemsPanel>

                                                    <!-- Spaced layout -->
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Spacing="15" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        
                                                        <Grid ColumnDefinitions="Auto, *"
                                                              RowDefinitions="Auto, Auto">
                                                            <!-- Left part -->
                                                            
                                                            <!-- Delete button -->
                                                            <Border Margin="0 0 5 0">
                                                                <Button  Command="{Binding $parent[UserControl].((ProjectPageViewModel)DataContext).DeleteEngineCommand}"
                                                                         CommandParameter="{Binding}"
                                                                         Theme="{DynamicResource BorderlessButton}"
                                                                         Classes="Danger"
                                                                         Padding="5 0"
                                                                         VerticalAlignment="Top">
                                                                    <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                                              Classes="ExtraLarge"
                                                                              Data="{StaticResource SemiIconDelete}" />
                                                                </Button>
                                                            </Border>
                                                            
                                                            <!-- Engine type -->
                                                            <Border Grid.Row="1" Margin="0 0 5 0">
                                                                <ComboBox ItemsSource="{x:Static engine:EngineTypeCollectionProvider.Result}" 
                                                                          SelectedItem="{Binding Type}" Width="50">
                                                                    <ComboBox.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <Image Width="26"
                                                                                Height="26"
                                                                                Margin="0 0 5 0"
                                                                                Source="{Binding Converter={StaticResource EngineTypeToImagePathConverter}}"/>
                                                                        </DataTemplate>
                                                                    </ComboBox.ItemTemplate>
                                                                </ComboBox>
                                                            </Border>
                                                            
                                                            <!-- Right part -->
                                                            
                                                            <!-- Engine name -->
                                                            <Grid Grid.Column="1"
                                                                  ColumnDefinitions="60, *"
                                                                  Margin="0 0 0 5">

                                                                <TextBlock VerticalAlignment="Center"
                                                                           FontWeight="Bold"
                                                                           Text="Name"
                                                                           TextWrapping="Wrap" />

                                                                <StatefulTextbox Grid.Column="1" Text="{Binding Name, Mode=TwoWay}" />
                                                            </Grid>
                                                                
                                                            <!-- Engine path -->
                                                            <Grid Grid.Column="1" Grid.Row="1"
                                                                  ColumnDefinitions="60, *">

                                                                <TextBlock VerticalAlignment="Center"
                                                                           FontWeight="Bold"
                                                                           Text="Path"
                                                                           TextWrapping="Wrap" />

                                                                <StatefulTextbox Grid.Column="1" Text="{Binding Path, Mode=TwoWay}" />
                                                            </Grid>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Border>
                                </StackPanel>
                            </HeaderedContentControl>
                            
                            <!-- Archives -->
                            <HeaderedContentControl Classes="GroupBox"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Header="Archives">

                                <StackPanel>
                                    <TextBlock Classes="Tertiary"
                                               FontSize="10"
                                               Margin="0 -5 0 0"
                                               Text="Defined archives are used during testing and when editing maps."
                                               TextWrapping="Wrap" />
                                    
                                    <Button HorizontalAlignment="Left"
                                            Command="{Binding AddArchiveCommand}"
                                            Classes="Success"
                                            Theme="{DynamicResource BorderlessButton}"
                                            Padding="5 0">
                                        <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                  Classes="ExtraLarge"
                                                  Data="{StaticResource SemiIconPlusCircle}" />
                                    </Button>
                                    
                                    <Border Padding="5 10" MaxHeight="400">
                                    
                                        <ScrollViewer>
                                            <ItemsControl ItemsSource="{Binding CurrentProjectProvider.ProjectContext.Archives}">
                                                <ItemsControl.ItemsPanel>

                                                    <!-- Spaced layout -->
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Spacing="15" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        
                                                        <Grid ColumnDefinitions="Auto, *">
                                                            <!-- Left part -->
                                                            <Border Margin="0 0 5 0">
                                                                <Button  Command="{Binding $parent[UserControl].((ProjectPageViewModel)DataContext).DeleteArchiveCommand}"
                                                                         CommandParameter="{Binding}"
                                                                         Theme="{DynamicResource BorderlessButton}"
                                                                         Classes="Danger"
                                                                         Padding="5 0"
                                                                         VerticalAlignment="Top">
                                                                    <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                                              Classes="ExtraLarge"
                                                                              Data="{StaticResource SemiIconDelete}" />
                                                                </Button>
                                                            </Border>
                                                            
                                                            <!-- Right part -->
                                                            <StackPanel Grid.Column="1"
                                                                        Spacing="5">
                                                                
                                                                <!-- Archive name -->
                                                                <Grid ColumnDefinitions="60, *">

                                                                    <TextBlock VerticalAlignment="Center"
                                                                               FontWeight="Bold"
                                                                               Text="Name"
                                                                               TextWrapping="Wrap" />

                                                                    <StatefulTextbox Grid.Column="1" Text="{Binding Name, Mode=TwoWay}" />
                                                                </Grid>
                                                                
                                                                <!-- Archive path -->
                                                                <Grid ColumnDefinitions="60, *">

                                                                    <TextBlock VerticalAlignment="Center"
                                                                               FontWeight="Bold"
                                                                               Text="Path"
                                                                               TextWrapping="Wrap" />

                                                                    <StatefulTextbox Grid.Column="1" Text="{Binding Path, Mode=TwoWay}" />
                                                                </Grid>
                                                                
                                                                <!-- Exclude from testin parameters and testing in general -->
                                                                <CheckBox IsChecked="{Binding ExcludeFromTesting, Mode=TwoWay}"
                                                                          Content="Exclude this archive from testing parameters."/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Border>
                                </StackPanel>
                            </HeaderedContentControl>
                            
                            <!-- IWads -->
                            <HeaderedContentControl Classes="GroupBox"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Header="IWads">

                                <StackPanel>
                                    <TextBlock Classes="Tertiary"
                                               FontSize="10"
                                               Margin="0 -5 0 0"
                                               TextWrapping="Wrap">
                                        IWads are used as a base when editing or testing maps.
                                        <LineBreak />
                                        IWads configured here will replace IWads in local settings that share the same path.
                                    </TextBlock>
                                    
                                    <Button HorizontalAlignment="Left"
                                            Command="{Binding AddIWadCommand}"
                                            Classes="Success"
                                            Theme="{DynamicResource BorderlessButton}"
                                            Padding="5 0">
                                        <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                  Classes="ExtraLarge"
                                                  Data="{StaticResource SemiIconPlusCircle}" />
                                    </Button>
                                    
                                    <Border Padding="5 10" MaxHeight="400">
                                    
                                        <ScrollViewer>
                                            <ItemsControl ItemsSource="{Binding CurrentProjectProvider.ProjectContext.IWads}">
                                                <ItemsControl.ItemsPanel>

                                                    <!-- Spaced layout -->
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Spacing="15" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        
                                                        <Grid ColumnDefinitions="Auto, *">
                                                            <!-- Left part -->
                                                            <Border Margin="0 0 5 0">
                                                                <Button  Command="{Binding $parent[UserControl].((ProjectPageViewModel)DataContext).DeleteIWadCommand}"
                                                                         CommandParameter="{Binding}"
                                                                         Theme="{DynamicResource BorderlessButton}"
                                                                         Classes="Danger"
                                                                         Padding="5 0"
                                                                         VerticalAlignment="Top">
                                                                    <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                                              Classes="ExtraLarge"
                                                                              Data="{StaticResource SemiIconDelete}" />
                                                                </Button>
                                                            </Border>
                                                            
                                                            <!-- Right part -->
                                                            <StackPanel Grid.Column="1"
                                                                        Spacing="5">
                                                                
                                                                <!-- IWad name -->
                                                                <Grid ColumnDefinitions="60, *">

                                                                    <TextBlock VerticalAlignment="Center"
                                                                               FontWeight="Bold"
                                                                               Text="Name"
                                                                               TextWrapping="Wrap" />

                                                                    <StatefulTextbox Grid.Column="1" Text="{Binding Name, Mode=TwoWay}" />
                                                                </Grid>
                                                                
                                                                <!-- IWad path -->
                                                                <Grid ColumnDefinitions="60, *">

                                                                    <TextBlock VerticalAlignment="Center"
                                                                               FontWeight="Bold"
                                                                               Text="Path"
                                                                               TextWrapping="Wrap" />

                                                                    <StatefulTextbox Grid.Column="1" Text="{Binding Path, Mode=TwoWay}" />
                                                                </Grid>
                                                            </StackPanel>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Border>
                                </StackPanel>
                            </HeaderedContentControl>
                        </StackPanel>

                        <GridSplitter Grid.Column="1" ShowsPreview="True" />

                        <!-- Right side -->
                        <StackPanel Grid.Column="2" Spacing="5">

                            <!-- Compilers -->
                            <HeaderedContentControl Classes="GroupBox"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Header="Compilers">

                                <StackPanel>
                                    <Border Padding="5 10">

                                        <StackPanel Spacing="10">

                                            <!-- ACC compiler -->
                                            <Grid ColumnDefinitions="115, *">

                                                <TextBlock VerticalAlignment="Center"
                                                           FontWeight="Bold"
                                                           Text="ACC compiler"
                                                           TextWrapping="Wrap" />

                                                <StatefulTextbox Grid.Column="1"
                                                                 Text="{Binding CurrentProjectProvider.ProjectContext.Configurations[AccCompilerExecutableFilePath]}">
                                                    <StatefulTextbox.AdditionalContent>
                                                        <Button Grid.Column="2"
                                                                Command="{Binding PickFileCommand}"
                                                                CommandParameter="{x:Static compilestatics:CompileTaskStatics.AccCompilerExecutableFilePathKey}"
                                                                Classes="Tertiary"
                                                                Theme="{DynamicResource SolidButton}"
                                                                Padding="5 0">
                                                            <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                                      Classes="ExtraLarge"
                                                                      Data="{StaticResource SemiIconFolderOpen}" />
                                                        </Button>
                                                    </StatefulTextbox.AdditionalContent>
                                                </StatefulTextbox>
                                            </Grid>

                                            <!-- BCC compiler -->
                                            <Grid ColumnDefinitions="115, *">

                                                <TextBlock VerticalAlignment="Center"
                                                           FontWeight="Bold"
                                                           Text="BCC compiler"
                                                           TextWrapping="Wrap" />

                                                <StatefulTextbox Grid.Column="1"
                                                                 Text="{Binding CurrentProjectProvider.ProjectContext.Configurations[BccCompilerExecutableFilePath]}">
                                                    <StatefulTextbox.AdditionalContent>
                                                        <Button Grid.Column="2"
                                                                Command="{Binding PickFileCommand}"
                                                                CommandParameter="{x:Static compilestatics:CompileTaskStatics.BccCompilerExecutableFilePathKey}"
                                                                Classes="Tertiary"
                                                                Theme="{DynamicResource SolidButton}"
                                                                Padding="5 0">
                                                            <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                                      Classes="ExtraLarge"
                                                                      Data="{StaticResource SemiIconFolderOpen}" />
                                                        </Button>
                                                    </StatefulTextbox.AdditionalContent>
                                                </StatefulTextbox>
                                            </Grid>

                                            <!-- GDCC compiler -->
                                            <Grid ColumnDefinitions="115, *">

                                                <TextBlock VerticalAlignment="Center"
                                                           FontWeight="Bold"
                                                           Text="GDCC compiler"
                                                           TextWrapping="Wrap" />

                                                <StatefulTextbox Grid.Column="1"
                                                                 Text="{Binding CurrentProjectProvider.ProjectContext.Configurations[GdccAccCompilerExecutableFilePath]}">
                                                    <StatefulTextbox.AdditionalContent>
                                                        <Button Grid.Column="2"
                                                                Command="{Binding PickFileCommand}"
                                                                CommandParameter="{x:Static compilestatics:CompileTaskStatics.GdccAccCompilerExecutableFilePathKey}"
                                                                Classes="Tertiary"
                                                                Theme="{DynamicResource SolidButton}"
                                                                Padding="5 0">
                                                            <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                                      Classes="ExtraLarge"
                                                                      Data="{StaticResource SemiIconFolderOpen}" />
                                                        </Button>
                                                    </StatefulTextbox.AdditionalContent>
                                                </StatefulTextbox>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </HeaderedContentControl>

                            <!-- Editors -->
                            <HeaderedContentControl Classes="GroupBox"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Header="Editors">

                                <StackPanel>
                                    <Border Padding="5 10">

                                        <StackPanel Spacing="10">

                                            <!-- Ultimate Doombuilder executable -->
                                            <Grid ColumnDefinitions="115, *">

                                                <TextBlock VerticalAlignment="Center"
                                                           FontWeight="Bold"
                                                           Text="Ultimate DoomBuilder"
                                                           TextWrapping="Wrap" />


                                                <StatefulTextbox Grid.Column="1"
                                                                 Text="{Binding CurrentProjectProvider.ProjectContext.Configurations[UdbExecutableFilePath]}">
                                                    <StatefulTextbox.AdditionalContent>
                                                        <Button Grid.Column="2"
                                                                Command="{Binding PickFileCommand}"
                                                                CommandParameter="{x:Static savingstatics:SavingStatics.UdbExecutableFilePathKey}"
                                                                Classes="Tertiary"
                                                                Theme="{DynamicResource SolidButton}"
                                                                Padding="5 0">
                                                            <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                                      Classes="ExtraLarge"
                                                                      Data="{StaticResource SemiIconFolderOpen}" />
                                                        </Button>
                                                    </StatefulTextbox.AdditionalContent>
                                                </StatefulTextbox>
                                            </Grid>

                                            <!-- Slade executable -->
                                            <Grid ColumnDefinitions="115, *">

                                                <TextBlock VerticalAlignment="Center"
                                                           FontWeight="Bold"
                                                           Text="Slade"
                                                           TextWrapping="Wrap" />

                                                <StatefulTextbox Grid.Column="1"
                                                                 Text="{Binding CurrentProjectProvider.ProjectContext.Configurations[SladeExecutableFilePath]}">
                                                    <StatefulTextbox.AdditionalContent>
                                                        <Button Grid.Column="2"
                                                                Command="{Binding PickFileCommand}"
                                                                CommandParameter="{x:Static savingstatics:SavingStatics.SladeExecutableFilePathKey}"
                                                                Classes="Tertiary"
                                                                Theme="{DynamicResource SolidButton}"
                                                                Padding="5 0">
                                                            <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                                      Classes="ExtraLarge"
                                                                      Data="{StaticResource SemiIconFolderOpen}" />
                                                        </Button>
                                                    </StatefulTextbox.AdditionalContent>
                                                </StatefulTextbox>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </HeaderedContentControl>
                            
                            <!-- Other executables -->
                            <HeaderedContentControl Classes="GroupBox"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Header="Other executables">

                                <StackPanel>
                                    <Border Padding="5 10">

                                        <StackPanel Spacing="10">

                                            <!-- ACS VM -->
                                            <Grid ColumnDefinitions="115, *">

                                                <TextBlock VerticalAlignment="Center"
                                                           FontWeight="Bold"
                                                           Text="ACS VM"
                                                           TextWrapping="Wrap" />


                                                <StatefulTextbox Grid.Column="1"
                                                                 Text="{Binding CurrentProjectProvider.ProjectContext.Configurations[AcsVmExecutableFilePath]}">
                                                    <StatefulTextbox.AdditionalContent>
                                                        <Button Grid.Column="2"
                                                                Command="{Binding PickFileCommand}"
                                                                CommandParameter="{x:Static acsvmstatics:AcsVmTaskStatics.AcsVmExecutableFilePathKey}"
                                                                Classes="Tertiary"
                                                                Theme="{DynamicResource SolidButton}"
                                                                Padding="5 0">
                                                            <PathIcon Theme="{StaticResource InnerPathIcon}"
                                                                      Classes="ExtraLarge"
                                                                      Data="{StaticResource SemiIconFolderOpen}" />
                                                        </Button>
                                                    </StatefulTextbox.AdditionalContent>
                                                </StatefulTextbox>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </HeaderedContentControl>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>