<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20" Width="300">

            <StackPanel>
                <HeaderedContentControl Header="Foo">
                    <TextBlock Text="Hello, world!" />
                </HeaderedContentControl>

                <HeaderedContentControl Header="Foo"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        CornerRadius="4">
                    <TextBlock Text="Hello, world!" />
                </HeaderedContentControl>

                <ThemeVariantScope RequestedThemeVariant="{x:Static ThemeVariant.Light}">
                    <Border Background="{DynamicResource SemiBackground0Color}"
                            Padding="20">
                        <HeaderedContentControl Header="Foo" Classes="GroupBox">
                            <TextBlock Text="Hello, world!" />
                        </HeaderedContentControl>
                    </Border>
                </ThemeVariantScope>

                <ThemeVariantScope RequestedThemeVariant="{x:Static ThemeVariant.Dark}">
                    <Border Background="{DynamicResource SemiBackground0Color}"
                            Padding="20">
                        <HeaderedContentControl Header="Foo" Classes="GroupBox">
                            <TextBlock Text="Hello, world!" />
                        </HeaderedContentControl>
                    </Border>
                </ThemeVariantScope>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <Style Selector="HeaderedContentControl.GroupBox">
        <Setter Property="Template">
            <ControlTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Header -->
                    <Border
                        ZIndex="1"
                        Background="{DynamicResource SemiBackground0Color}"
                        Padding="5,0,5,0"
                        Margin="5,0,0,0">
                        <TextBlock
                            Text="{TemplateBinding Header}"
                            FontWeight="Bold" />
                    </Border>

                    <!-- Content Area -->
                    <Border
                        Grid.RowSpan="2"
                        Padding="0,5,0,0"
                        Grid.ColumnSpan="2"
                        CornerRadius="4"
                        Margin="0,10,0,0"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                        BorderThickness="1">
                        <ContentPresenter
                            Name="PART_ContentPresenter"
                            Padding="8"
                            Content="{TemplateBinding Content}" />
                    </Border>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>